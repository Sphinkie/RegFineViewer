                    </Button>
                </StackPanel>
            </materialDesign:Card>
        </Popup>


        <!--==========================================================-->
        <!--           ESSAIS DIVERS                                  -->
        <!--==========================================================-->
        <!--
        IsOpen="False"
        PlacementTarget="{Binding ElementName=bTray2Button1}"   Placement="Bottom" 
        IsOpen="{Binding ElementName=bTray2Button1,Path=IsMouseOver}" 
